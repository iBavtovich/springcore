<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.spring.core.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="com.epam.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="event" class="com.epam.spring.core.Event" scope="prototype">
           <constructor-arg>
               <bean class="java.util.Date"/>
           </constructor-arg>
           <constructor-arg>
                <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
           </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="com.epam.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="C:\Users\iBavtovich\IdeaProjects\SpringCore\src\temp.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.epam.spring.core.loggers.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="2"/>
        <constructor-arg value="C:\Users\iBavtovich\IdeaProjects\SpringCore\src\temp.txt"/>
    </bean>

    <bean id="app" class="com.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

</beans>