<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <import resource="loggers.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>

        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesMode" value="2"/>

    </bean>

    <bean id="client" class="com.epam.spring.core.beans.Client" c:fullName="${name}" c:id="${id}" c:greeting="${greeting}"/>

    <bean id="event" class="com.epam.spring.core.Event" scope="prototype">
           <constructor-arg>
               <bean class="java.util.Date"/>
           </constructor-arg>
           <constructor-arg>
                <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
           </constructor-arg>
    </bean>

    <util:map id="loggerMap">
        <entry key="INFO" value-ref="eventLogger"/>
        <entry key="ERROR" value-ref="combinedEventLogger"/>
    </util:map>

    <bean id="app" class="com.epam.spring.core.App" c:cli-ref="client" c:log-ref="cacheFileEventLogger" c:loggers-ref="loggerMap"/>

</beans>